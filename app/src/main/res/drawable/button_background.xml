<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼이 눌렸을 때의 상태 (Pressed 상태) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- 배경 색상 흰색 -->
            <stroke android:width="2dp" android:color="@android:color/black" /> <!-- 검은색 테두리 -->
            <corners android:radius="16dp" /> <!-- 둥근 모서리 -->
        </shape>
    </item>

    <!-- 기본 상태 (Pressed 아닌 상태) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- 배경 색상 흰색 -->
            <stroke android:width="2dp" android:color="@android:color/black" /> <!-- 검은색 테두리 -->
            <corners android:radius="16dp" /> <!-- 둥근 모서리 -->
        </shape>
    </item>
</selector>
